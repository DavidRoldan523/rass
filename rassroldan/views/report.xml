                </form>
            </field>
        </record>        

    <!-- VISTA DE SEACRH -->
        <record model="ir.ui.view" id="report_rass_search_view">
            <field name="name">reportRass.search</field>
            <field name="model">report_rass.configuration</field>
            <field name="arch" type="xml">
                <search>
                    <field name="BusinessName"/>
                    <field name="BusinessId"/>
                    <field name="InvoiceType"/>
                    <field name="TemplateBusiness"/>
                </search>
            </field>
        </record>

         <!-- VISTA DE SEACRH MODEL DINI-->
        <record model="ir.ui.view" id="report_rass_search_view_dini">
            <field name="name">reportDini.search</field>
            <field name="model">report_rass.dini</field>
            <field name="arch" type="xml">
                <search>
                    <field name="IdDocumentTributario"/>
                </search>
            </field>
        </record>


        <!-- VISTA DE SEACRH CONFIGURATION -->
        <record model="ir.ui.view" id="report_rass_search_view_configuration">
            <field name="name">reportConfig.search</field>
            <field name="model">report_rass.configuration</field>
            <field name="arch" type="xml">
                <search>
                    <field name="BusinessId"/>
                </search>
            </field>
        </record>

