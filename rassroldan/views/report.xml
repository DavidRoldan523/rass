    <!-- VISTA DE CREACIÓN -->
        <record model="ir.ui.view" id="report_rass_form_view">
            <field name="name">reportCongif.form</field>
            <field name="model">report_rass.configuration</field>
            <field name="arch" type="xml">
                <form string="Report Form">
                    <sheet>
                        <group>                            
                            <field name="BusinessName"/>
                            <field name="BusinessId"/>
                            <field name="InvoiceType"/>
                            <field name="TemplateBusiness" domain="[('report_type','=','aeroo')]"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

