                            <field name="IdDocument"/>
                            <field name="TypeDocument"/>
                            <field name="BaseTaxC"/>
                            <field name="TarifeTaxC"/>
                            <field name="AmountTotalCal"/>
                            <field name="Reference1"/>
                            <field name="Reference2"/>
                            <field name="NameContribuyente"/>
                            <field name="IdentificationContribuyente"/>
                            <field name="AdditionalInfo"/>
