        <!-- Report Action -->
        <record model="ir.actions.act_window" id="report_rass_list_action">
            <field name="name">Reportes RASS</field>
            <field name="res_model">report_rass.configuration</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Configuración por empresa
                </p>
            </field>
        </record>

        <!-- Report Action MODELO DINI-->
        <record model="ir.actions.act_window" id="report_rass_dini_list_action">
